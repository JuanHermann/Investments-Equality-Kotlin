<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginVertical="5dp"

    android:background="@drawable/background_color_with_radius">

    <TextView
        android:id="@+id/tv_asset_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="CLP6"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_asset_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="R$ 50"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tv_asset_date_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_asset_name" />

    <TextView
        android:id="@+id/tv_asset_date_com"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="15/12"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_asset_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_asset_name" />

</androidx.constraintlayout.widget.ConstraintLayout>